<h1>Listing steps</h1>

<table>
  <thead>
    <tr>
      <th>Step</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @steps.each do |step| %>
      <tr>
        <td><%= step.step %></td>
        <td><%= link_to 'Show',  exercise_step_path(@exercise, step) %></td>
        <td><%= link_to 'Edit', edit_exercise_step_path(@exercise, step) %></td>
        <td><%= link_to 'Destroy', exercise_step_path(@exercise, step), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Step', new_exercise_step_path %>
